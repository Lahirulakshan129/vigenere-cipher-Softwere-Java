<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="320.0" prefWidth="578.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="VigenereCipherController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Plaintext:" />
        <TextField fx:id="plaintextField" layoutX="100.0" layoutY="20.0" prefWidth="300.0" />
        
        <Label layoutX="20.0" layoutY="60.0" text="Key:" />
        <TextField fx:id="keyField" layoutX="100.0" layoutY="60.0" prefWidth="300.0" />
        
        <Button fx:id="encryptButton" layoutX="100.0" layoutY="100.0" onAction="#handleEncrypt" text="Encrypt" />
        <Button fx:id="decryptButton" layoutX="200.0" layoutY="100.0" onAction="#handleDecrypt" text="Decrypt" />
        
        <Label layoutX="20.0" layoutY="140.0" text="Ciphertext:" />
        <TextArea fx:id="ciphertextArea" layoutX="100.0" layoutY="140.0" prefHeight="80.0" prefWidth="300.0" />
        
        <Label layoutX="20.0" layoutY="240.0" text="Decrypted Text:" />
        <TextArea fx:id="decryptedTextArea" layoutX="100.0" layoutY="240.0" prefHeight="80.0" prefWidth="300.0" />
      <Button fx:id="reset" layoutX="282.0" layoutY="100.0" mnemonicParsing="false" onAction="#reset" text="reset" />
    </children>
</AnchorPane>
